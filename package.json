{
  "name": "itujji",
  "private": true,
  "version": "0.0.0",
  "description": "一个简洁优雅的本地图片管理工具",
  "author": {
    "name": "jzj",
    "email": "example@example.com"
  },
  "type": "module",
  "license": "MIT",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "electron:dev": "tsc -p electron/tsconfig.json && concurrently \"vite\" \"electron .\"",
    "electron:build": "cd comfyui_client && npm run build && cd .. && tsc -p electron/tsconfig.json && vite build && node -e \"require('fs').cpSync('electron', 'dist-electron', {recursive: true})\" && electron-builder",
    "electron:preview": "electron .",
    "tag": "node script/script.cjs"
  },
  "dependencies": {
    "comfyui-client": "file:comfyui_client",
    "lucide-react": "^0.344.0",
    "python-shell": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^1.4.4",
    "react-masonry-css": "^1.0.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "com.itujji",
    "productName": "itujji",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "comfyui_client/dist/**/*",
      "script/**/*"
    ],
    "extraResources": [
      {
        "from": "comfyui_client/dist",
        "to": "comfyui_client/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "comfyui_client/workflows",
        "to": "comfyui_client/workflows",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "install.bat",
        "to": "install.bat"
      },
      {
        "from": "install.command",
        "to": "install.command"
      },
      {
        "from": "install.sh",
        "to": "install.sh"
      },
      {
        "from": "script",
        "to": "script"
      }
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "asar": true,
    "mac": {
      "category": "public.app-category.photography"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "itujji"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
