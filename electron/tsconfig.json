{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "../dist/electron",
    "rootDir": "..",
    "allowJs": true,
    "skipLibCheck": true,
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.cts",
    "./**/*.js",
    "./**/*.jsx"
  ],
  "exclude": [
    "../script/**/*",
    "../node_modules/**/*",
    "../electron/__tests__/**/*",
    "../electron/dao/**/*",
    "../electron/**/*.test.ts"
  ]
}